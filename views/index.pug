extends layout.pug

block content 
  article.grid-container.portfolio-intro
    div

      h1 Welcome to My Portfolio

      p.lead.text-light
        | This portfolio contains my first five techdegree projects.  Thanks for taking a look!
  article.grid-container.portfolio-index
    
    .grid-x.grid-margin-x.small-up-2.medium-up-2.large-up-3

      each project in projects
        .cell
          a(href=`http://localhost:3000/projects/${project.id}`)
            img.thumbnail(src=`${project.image_urls[0]}` width=`550` height=`550`)
          
          h5=`${project.project_name}`
      
