extends layout.pug

block content 
  nav.grid-container.portfolio-breadcrumb
    a(href='/') ‚Üê Back
  article.grid-container.portfolio-intro.portfolio-project
    .grid-x
      .cell.small-6.medium-9.large-9

        //- Dynamically adds the project title.
        h1=`${project.project_name}`

        //- Dynamically adds the project description.
        p.lead.text-light=`${project.description}`

      .cell.portfolio-meta.small-6.medium-2.large-3
        h6 Technologies

        //- Iterates to replace the li tags below and interpolation to dynamically add the technologies used in each project.
        each technology in project.technologies
          ul
            li=technology

        //- Dynamically adds URLs to link to the repo and the live version of each project.
        a.button.expanded(href=`${project.live_link}`) Live Demo
        a.button.expanded(href=`${project.github_link}`) GitHub Repo
    
    //- Dynamically adds image urls for each project.
    img.image(src=project.image_urls[0] width=`1200` height=`550`)
    img.image(src=project.image_urls[1] width=`1200` height=`550`)
    if project.image_urls[2]
      img.image(src=project.image_urls[2] width=`1200` height=`550`)